---
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props as Props;
---

<Layout seo={seo}>
  <div class="div-blocks"></div>
  <div class="con">
  <Header slot="header" />
		<slot />
  <Footer slot="footer" />
  </div>

  <div class="preloader" id="preloader">
    <div class="loading-icon">
      <div class="loading-1"></div>
      <div class="loading-2"></div>
      <div class="loading-3"></div>
    </div>
  </div>
  
  <script>
  window.addEventListener("load", function () {
    const preloader = document.querySelector("#preloader");
    preloader.classList.add("preloader-deactivate");
  });
  </script>

<script src="https://link.storjshare.io/s/jubdq5k6d2yikti7sv4vazuzkcza/demo-bucket/jquery-3.5.1.min.dc5e7f18c8.js?download=1?site=63898e95e54de9be64cd0ea6" type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://link.storjshare.io/s/jv53rogbphyb3r5q65twdzwxmy3q/demo-bucket/webflow.0129e4589.js?download=1" type="text/javascript"></script>
</Layout>

<style>
  .preloader-deactivate {
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease-out;
}
.preloader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #080808;
  z-index: 99999999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-icon {
  display: inline-block;
  position: relative;
  width: 80px;
  height: 80px;
}

.loading-1,
.loading-2,
.loading-3 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  animation: loading 1s ease-in-out infinite;
}

.loading-1 {
  animation-delay: 0.2s;
  background: #333;
}

.loading-2 {
  animation-delay: 0.4s;
  background: #555;
}

.loading-3 {
  animation-delay: 0.6s;
  background: #777;
}

@keyframes loading {
  0% {
    transform: scale(0);
  }
  20% {
    transform: scale(1);
  }
  100% {
    transform: scale(0);
  }
}
</style>
